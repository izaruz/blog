{% extends "admin-layout.twig" %}

{% block content %}
    <a href="{{ 'user/create' | url }}" class="btn btn-primary btn-lg btn-block">Add new user</a>
    <br>
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}