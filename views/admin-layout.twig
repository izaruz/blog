</head>
<body>

    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ '' | url }}">Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ 'admin' | url }}">Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ 'post-list' | url }}">Post</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ 'post-list/add' | url }}">Insert post</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ 'user' | url }}">Users</a>
            </li>
            </ul>
        </div>
    </nav>

    <section class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Blog title</h1>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="row">
            <div class="col-md-8">
                {% block content %}{% endblock %}
            </div>
            <div class="col-md-4">
                <h3>Sidebar</h3>
                {{ 'add' | url }}
            </div>
        </div>
    </section>

    <section>
        <div class="row">
            <div class="col-md-12">
                <footer>
                    <p>Isaac Villatoro</p>
                </footer>
            </div>
        </div>
    </section>

